<h1>Listing Wishes</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3" class="text-center">Score</th>
      <th>Picture</th>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Skills</th>
      <th>Tools</th>
      <th>Wellwisher</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishes.each do |wish| %>
      <tr>
        <td>
          <%= link_to(like_wish_path(wish), { method: :put }) do %>
            <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
          <% end %>
        </td>
        <td><%= wish.score %></td>
        <td>
          <%= link_to(dislike_wish_path(wish), { method: :put }) do %>
            <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <% if wish.images.exists? %>
            <%= image_tag wish.images.first.photo.url(:thumb) %>
          <% end %>
        </td>
        <td><%= wish.title %></td>
        <td><%= wish.description %></td>
        <% if !wish.location.blank? %>
          <td><%= wish.location.address %></td>
        <% end %>
        <td>
          <% wish.skills.each do |skill| %>
            <%= skill.name %> 
          <% end %>
        </td>
        <td>
          <% wish.tools.each do |tool| %>
            <%= tool.name %> 
          <% end %>
        </td>
        <td><%= wish.user.username %></td>
        <td><%= link_to 'Show', wish %></td>
        <td><%= link_to 'Edit', edit_wish_path(wish) %></td>
        <td><%= link_to 'Destroy', wish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
