<h1>Listing Wishes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishes.each do |wish| %>
      <tr>
        <td><%= wish.title %></td>
        <td><%= wish.description %></td>
        <td><%= wish.location.address %></td>
        <td><%= link_to 'Show', wish %></td>
        <td><%= link_to 'Edit', edit_wish_path(wish) %></td>
        <td><%= link_to 'Destroy', wish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'upvote', like_wish_path(wish), method: :put %></td>
        <td><%= link_to 'downvote', dislike_wish_path(wish), method: :put %></td>
        <td><%= wish.score %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wish', new_wish_path %>
